<h3 style="line-height: 1.15;font-size: 4rem;"> Jobster </h3>
<div class="section">
    <img style="height: 10em;border-color: black;border-radius: 10px;border: 1px solid #C8C8C8;" src="/mascot.png" alt="lobster" className="slogo" rel="stylesheet" href="/public/css/style.css"/>
    <p class="lead">
        Match with the perfect employer/employee from the comfort of your home!
    </p>
</div>
<h4> Sign Up </h4>
<div class="divider"></div>
<div class="section">
    <div class="row">
        <form action="/" method="POST" enctype="multipart/form-data" class="col s12">
        <div class="row">
            <div class="input-field col s12">
            <input id="fname" type="text" name="fname">
            <label for="fname">First Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
            <input id="lname" type="text" name="lname">
            <label for="lname">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
            <input id="email" type="email" class="validate" name="email">
            <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
            <input id="skills" type="text" name="skills">
            <label for="Skills">Skills</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
            <input id="looking" type="text" name="looking">
            <label for="looking">Looking For</label>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Sign up" class="btn">
            <a href="/" class="btn red darken-1">Cancel</a>
        </div>
        </form>
    </div>
</div>