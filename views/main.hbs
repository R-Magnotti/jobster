<div style="text-align:CENTER;border: 1px solid #C8C8C8;padding:3rem">
    <div style="text-align:CENTER;border: 3px solid #C8C8C8;padding:3rem"><h3 style="font-family: cursive;"> Find Your Perfect Match Today </h3></div>
    <h4> Welcome {{name}} </h4>
    <h5> Here are some people that are available for work </h5>
    {{#if list_of_matches}}
        <table class="striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Skill</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each list_of_matches}}
                    <tr>
                        <td>{{fname}}</td>
                        <td>{{email}}</td>
                        <td><span class="dash-status">{{skills}}</span></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
</div>

{{else}}
    <p> You do not have any matches </p>

{{/if}}
